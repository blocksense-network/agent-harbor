{
  "name": "aw-webui-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Agents-Workflow WebUI using Playwright",
  "scripts": {
    "test": "playwright test",
    "test:e2e": "./start-servers.sh",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "install-browsers": "playwright install",
    "lint": "eslint tests --ext .ts,.js",
    "lint:fix": "eslint tests --ext .ts,.js --fix",
    "format": "prettier --write tests/**/*.{ts}",
    "format:check": "prettier --check tests/**/*.{ts}"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "webui",
    "agents-workflow"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.52.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22"
  }
}
