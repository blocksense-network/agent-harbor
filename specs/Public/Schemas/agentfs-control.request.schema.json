{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://blocksense.dev/agentfs/control/request.schema.json",
  "title": "AgentFS Control Request",
  "type": "object",
  "required": ["version", "op"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1"
    },
    "op": {
      "type": "string",
      "enum": [
        "snapshot.create",
        "snapshot.list",
        "branch.create",
        "branch.bind"
      ]
    }
  },
  "allOf": [
    {
      "if": { "properties": { "op": { "const": "snapshot.create" } } },
      "then": {
        "properties": {
          "name": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      }
    },
    {
      "if": { "properties": { "op": { "const": "snapshot.list" } } },
      "then": {
        "additionalProperties": false
      }
    },
    {
      "if": { "properties": { "op": { "const": "branch.create" } } },
      "then": {
        "required": ["from"],
        "properties": {
          "from": { "$ref": "#/$defs/SnapshotId" },
          "name": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      }
    },
    {
      "if": { "properties": { "op": { "const": "branch.bind" } } },
      "then": {
        "required": ["branch"],
        "properties": {
          "branch": { "$ref": "#/$defs/BranchId" },
          "pid": { "type": "integer", "minimum": 1 }
        },
        "additionalProperties": false
      }
    }
  ],
  "$defs": {
    "SnapshotId": {
      "type": "string",
      "minLength": 6
    },
    "BranchId": {
      "type": "string",
      "minLength": 6
    }
  }
}





