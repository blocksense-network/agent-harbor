{
    "rules": [
      {
        "if_contains": ["create", "hello.py"],
        "response": {
          "assistant": "I'll create hello.py for you.",
          "tool_calls": [
            {"name": "write_file", "args": {"path": "hello.py", "text": "print('Hello, World!')\n"}}
          ]
        }
      },
      {
        "if_contains": ["read", "hello.py"],
        "response": {
          "assistant": "Reading hello.py",
          "tool_calls": [
            {"name": "read_file", "args": {"path": "hello.py"}}
          ]
        }
      }
    ]
  }
  